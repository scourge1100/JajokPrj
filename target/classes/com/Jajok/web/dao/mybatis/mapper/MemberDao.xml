<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.answeris.web.dao.NoticeDao">

	<insert id="insert"
		parameterType="com.newlecture.web.entity.Member">
		insert into Member(id, name, pwd, email)
		values(#{id}, #{name}, #{pwd}, #{email})
	</insert>

	<update id="update"
		parameterType="com.newlecture.web.entity.Member">
		update [Member]
		SET [name]=#{name}
		,[email]=#{email}
		,[pwd=#{pwd}
		WHERE id=#{id}
	</update>

	<delete id="delete" parameterType="String">
		DELETE FROM [dao].[Member]
		WHERE id=#{param1}
	</delete>

	<select id="get" resultType="com.newlecture.web.entity.Member">
		select * from Member where id=#{param1}
	</select>

	<select id="getList"
		resultType="com.newlecture.web.entity.Member">
		select * from Member
		where ${param1} like '%${param2}%'
		<!-- 다음은 페이징을 위한 쿼리 옵션 -->
		order by regDate desc
		offset #{(param3-1)*10} rows
		fetch next 10 rows only
	</select>

</mapper>